<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/blue_grey_600</item>
        <item name="buttonBarPositiveButtonStyle">@style/DarkButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DarkButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/DarkButton</item>
    </style>

    <style name="DarkButton" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/blue_grey_700</item>
    </style>

    <!-- Text -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextInputLayoutHint</item>

        <!--<item name="android:textColorPrimary">@color/colorAccent</item>-->
        <item name="boxStrokeWidth">2dp</item>

        <!--EditText hint color-->
        <item name="android:textColorHint">@color/text_input_hint</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/periwinkle</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/periwinkle</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/periwinkle</item>

        <item name="boxStrokeColor">@color/text_input_layout</item>
    </style>

    <style name="TextInputLayoutTitle" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextInputLayoutHint</item>

        <!--<item name="android:textColorPrimary">@color/colorAccent</item>-->
        <item name="boxStrokeWidth">2dp</item>

        <!--EditText hint color-->
        <item name="android:textColorHint">@color/text_input_hint</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/periwinkle</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/periwinkle</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/periwinkle</item>

        <item name="boxStrokeColor">@color/text_input_layout</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>

    </style>

    <style name="EditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@drawable/edit_text_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxEms">20</item>
        <item name="android:minEms">10</item>
    </style>

    <style name="TextInputLayoutHint">
        <item name="android:textColor">@color/periwinkle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="RatingBar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:progressTint">@color/holo_blue_dark</item>
        <item name="android:progressBackgroundTint">@color/periwinkle</item>
        <item name="android:secondaryProgressTint">@color/white</item>
    </style>

    <style name="CategorySpinner" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/spinner_selector</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/periwinkle</item>
    </style>

</resources>